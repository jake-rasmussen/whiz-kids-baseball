// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Position {
  FIRST_BASE
  SECOND_BASE
  THIRD_BASE
  SHORTSTOP
  CATCHER
  LEFT_FIELD
  CENTER_FIELD
  RIGHT_FIELD
  PITCHER
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model User {
  clerkId   String             @id
  isAdmin   Boolean            @default(false)
  trainings TrainingsOnUsers[]
  email     String?
}

model Team {
  id          String       @id @default(cuid())
  name        String
  players     Player[]
  tournaments Tournament[]
  practices   Practice[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Player {
  id             String     @id @default(cuid())
  firstName      String
  lastName       String
  graduationYear Int
  school         String
  positions      Position[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  teamId         String?
  team           Team?      @relation(fields: [teamId], references: [id], onDelete: SetNull)
}

model Tournament {
  id        String     @id @default(cuid())
  name      String
  dates     DateTime[]
  location  String
  type      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  teamId    String
  team      Team       @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model Practice {
  id        String   @id @default(cuid())
  days      Day[]
  location  String
  startTime DateTime
  endTime   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model Tryout {
  id        String   @id @default(cuid())
  location  String
  dateTime  DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Alumni {
  id           String   @id @default(cuid())
  firstName    String
  lastName     String
  organization String
  year         Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Training {
  id           String             @id @default(cuid())
  name         String
  location     String
  dateTime     DateTime
  totalSlots   Int
  price        Int
  participants TrainingsOnUsers[]
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

model TrainingsOnUsers {
  user       User     @relation(fields: [userId], references: [clerkId])
  userId     String
  training   Training @relation(fields: [trainingId], references: [id])
  trainingId String
  playerName String

  @@id([userId, trainingId])
}
